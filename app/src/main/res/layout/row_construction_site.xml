<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/card_spacing"
        android:paddingRight="@dimen/card_spacing"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:clickable="true"
        android:focusable="true">

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="3dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <ImageView
                    android:id="@+id/image"
                    android:layout_width="match_parent"
                    android:layout_height="200sp"
                    android:fitsSystemWindows="true"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    android:tint="#44000000"
                    android:contentDescription="@string/construction_site"
                    tools:src="@drawable/construction_site_sample"
                    android:layout_marginBottom="@dimen/text_margin"/>

            <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/text_margin"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    tools:text="ETH"/>

            <TextView
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/text_margin"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    tools:text="Waserstrasse 12\n8051 ZÃ¼rich"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>